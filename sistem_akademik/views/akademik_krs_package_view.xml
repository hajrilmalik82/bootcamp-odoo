<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_akademik_krs_package_tree" model="ir.ui.view">
        <field name="name">akademik.krs.package.tree</field>
        <field name="model">akademik.krs.package</field>
        <field name="arch" type="xml">
            <tree string="KRS Packages">
                <field name="name"/>
                <field name="prodi_id"/>
                <field name="semester"/>
            </tree>
        </field>
    </record>

    <record id="view_akademik_krs_package_form" model="ir.ui.view">
        <field name="name">akademik.krs.package.form</field>
        <field name="model">akademik.krs.package</field>
        <field name="arch" type="xml">
            <form string="KRS Package">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="prodi_id"/>
                        </group>
                        <group>
                            <field name="semester"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Subjects">
                            <field name="subject_ids">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="credits"/>
                                    <field name="type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_akademik_krs_package" model="ir.actions.act_window">
        <field name="name">KRS Packages</field>
        <field name="res_model">akademik.krs.package</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
