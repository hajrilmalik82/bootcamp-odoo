<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_tree_mahasiswa" model="ir.ui.view">
        <field name="name">res.partner.tree.mahasiswa</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Mahasiswa">
                <field name="image_128" widget="image"/>
                <field name="nim"/>
                <field name="name"/>
                <field name="prodi_id"/>
                <field name="tahun_masuk"/>
                <field name="tag_mahasiswa" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="email" widget="email"/>
                <field name="phone" widget="phone"/>
                <field name="topik_riset" column_invisible="context.get('default_jenjang') != 'pasca'"/>
                <field name="dosen_pembimbing_id" column_invisible="context.get('default_jenjang') != 'pasca'"/>
                <field name="level_prestasi" widget="priority"/>
                <field name="status" widget="badge" decoration-success="status == 'lulus'" decoration-danger="status == 'dropout'"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_form_inherit_akademik" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.akademik</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="identitas_mahasiswa"/>
            </xpath>
        </field>
    </record>

    <record id="view_mahasiswa_search" model="ir.ui.view">
        <field name="name">res.partner.search.mahasiswa</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Pencarian Mahasiswa">
                <field name="name" string="Nama" filter_domain="['|', '|', ('name', 'ilike', self), ('nim', 'ilike', self), ('email', 'ilike', self)]"/>
                <field name="nim" string="NIM"/>
                <field name="email" string="Email"/>
                
                <separator/>
                <filter string="Mahasiswa Aktif" name="filter_aktif" domain="[('status', '=', 'aktif')]"/>
                <filter string="Lulus" name="filter_lulus" domain="[('status', '=', 'lulus')]"/>
                <filter string="Drop Out" name="filter_dropout" domain="[('status', '=', 'dropout')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Program Studi" name="group_prodi" context="{'group_by': 'prodi_id'}"/>
                    <filter string="Jenjang" name="group_jenjang" context="{'group_by': 'jenjang'}"/>
                </group>
                <searchpanel>
                    <field name="prodi_id" icon="fa-building" enable_counters="1"/>
                    <field name="status" icon="fa-tags" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_mahasiswa_list" model="ir.actions.act_window">
        <field name="name">Mahasiswa</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_partner_tree_mahasiswa"/>
        <field name="search_view_id" ref="view_mahasiswa_search"/>
        <field name="domain">[('identitas_mahasiswa', '=', True)]</field>
        <field name="context">{'default_identitas_mahasiswa': True, 'tree_view_ref': 'sistem_akademik.view_partner_tree_mahasiswa', 'form_view_ref': 'sistem_akademik.view_partner_form_mahasiswa'}</field>
    </record>

    <record id="view_partner_form_mahasiswa" model="ir.ui.view">
        <field name="name">res.partner.form.mahasiswa</field>
        <field name="model">res.partner</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <form string="Mahasiswa">
                <header>
                    <button name="action_generate_user" string="Generate User" type="object" class="oe_highlight" invisible="not email"/>
                    <button name="action_generate_nim" string="Generate NIM" type="object" class="oe_highlight" invisible="nim"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,aktif,lulus,dropout" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    
                    <group>
                        <group string="Data Identitas">
                            <field name="name" placeholder="Nama Mahasiswa"/>
                            <field name="identitas_mahasiswa" invisible="1"/>
                            <field name="nim" readonly="id != False"/>
                            <field name="prodi_id"/>
                        </group>
                        <group string="Kontak &amp; Kategori">
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="tag_mahasiswa" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Data Akademik">
                            <group>
                                <field name="jenjang" readonly="1" force_save="1"/>
                                <field name="topik_riset" invisible="jenjang != 'pasca'" required="jenjang == 'pasca'"/>
                                <field name="dosen_pembimbing_id" invisible="jenjang != 'pasca'"/>
                                <field name="level_prestasi" widget="priority"/>
                                <field name="tahun_masuk"/>
                            </group>
                        </page>
                        <page string="Catatan">
                            <field name="comment" placeholder="riwayat atau observasi dosen wali"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
