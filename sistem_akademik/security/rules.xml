<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rule_akademik_student_own" model="ir.rule">
            <field name="name">Mahasiswa: Own Data</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_akademik_student'))]"/>
        </record>

        <record id="rule_akademik_dosen_guided" model="ir.rule">
            <field name="name">Dosen: Mahasiswa Bimbingan</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['|', ('dosen_pembimbing_id.user_id', '=', user.id), ('id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_akademik_dosen'))]"/>
        </record>

        <record id="rule_akademik_officer_partner" model="ir.rule">
            <field name="name">Officer: All Partners</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_akademik_officer'))]"/>
        </record>
    </data>
</odoo>
