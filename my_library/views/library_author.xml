<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_library_author_tree" model="ir.ui.view">
            <field name="name">library.author.tree</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <tree string="Authors">
                    <field name="name"/>
                    <field name="book_count"/>
                    <field name="author_weight"/>
                </tree>
            </field>
        </record>

        <record id="view_library_author_form" model="ir.ui.view">
            <field name="name">library.author.form</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <form string="Author">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Author Name"/></h1>
                        </div>
                        <group>
                            <field name="book_count" readonly="1"/>
                            <field name="author_weight"/>
                            <field name="organization_id"/>
                        </group>
                        <notebook>
                            <page string="Books Written">
                                <field name="book_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="publication_year"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_library_author" model="ir.actions.act_window">
            <field name="name">Authors</field>
            <field name="res_model">library.author</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_library_author" 
                  name="Authors" 
                  parent="library_main_menu" 
                  action="action_library_author" 
                  sequence="2"/>

    </data>
</odoo>