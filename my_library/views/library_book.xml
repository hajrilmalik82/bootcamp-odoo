<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_library_book_tree" model="ir.ui.view">
            <field name="name">library.book.tree</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree string="Books">
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="publication_year"/>
                    <field name="basic_score"/>
                    <field name="author_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="view_library_book_form" model="ir.ui.view">
            <field name="name">library.book.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Book">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="category_id"/>
                                <field name="publication_year"/>
                                <field name="sponsor_id"/>
                                <field name="basic_score"/>
                                <field name="final_score"/>
                            </group>
                            <group>
                                <field name="author_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_library_book" model="ir.actions.act_window">
            <field name="name">Books</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first book.</p>
            </field>
        </record>

        <menuitem id="library_main_menu" name="Library" sequence="10"/>

        <menuitem id="menu_library_book" 
                  name="Books" 
                  parent="library_main_menu" 
                  action="action_library_book" 
                  sequence="1"/>

    </data>
</odoo>