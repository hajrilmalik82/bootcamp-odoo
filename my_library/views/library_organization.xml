<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_library_organization_tree" model="ir.ui.view">
            <field name="name">library.organization.tree</field>
            <field name="model">library.organization</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="org_weight"/>
                </tree>
            </field>
        </record>

        <record id="view_library_organization_form" model="ir.ui.view">
            <field name="name">library.organization.form</field>
            <field name="model">library.organization</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="org_weight"/>
                        </group>

                        <notebook>
                            <page string="Authored Books">
                                <field name="book_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="basic_score"/>
                                        <field name="final_score" decoration-bf="1"/> 
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_library_organization" model="ir.actions.act_window">
            <field name="name">Organizations</field>
            <field name="res_model">library.organization</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_library_organization" 
                  name="Organizations" 
                  parent="library_main_menu" 
                  action="action_library_organization" 
                  sequence="4"/>
    </data>
</odoo>