<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="act_hr_employee_mahasiswa_list" model="ir.actions.act_window">
        <field name="name">Mahasiswa Bimbingan</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_dosen_pembimbing_id': active_id}</field>
        <field name="domain">[('dosen_pembimbing_id', '=', active_id)]</field>
    </record>
    <record id="view_employee_form_dosen_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.dosen.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='coach_id']" position="after">
               <field name="is_dosen"/>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(act_hr_employee_mahasiswa_list)d" 
                        type="action" 
                        class="oe_stat_button" 
                        icon="fa-users"
                        invisible="not is_dosen">
                </button>
            </xpath>

            <xpath expr="//field[@name='work_email']" position="after">
                <group class="dosen_academic_group" invisible="not is_dosen">
                    <field name="nidn"/>
                    <field name="gelar_akademik"/>
                </group>
            </xpath>

            <xpath expr="//div[hasclass('oe_title')]/h1" position="inside">
                <div invisible="not is_dosen">
                    <field name="gelar_akademik" readonly="1"/>
                </div>
            </xpath>
        
        </field>
    </record>


    <record id="view_employee_tree_dosen_inherit" model="ir.ui.view">
        <field name="name">hr.employee.tree.dosen.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_email']" position="after">
                <field name="nidn" optional="show"/>
                <field name="is_dosen" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
