<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rule_akademik_dosen_self_employee" model="ir.rule">
            <field name="name">Dosen: Self Employee</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sistem_akademik.group_akademik_dosen'))]"/>
        </record>

        <record id="rule_akademik_officer_employee" model="ir.rule">
            <field name="name">Officer: Dosen and Self</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">['|', ('is_dosen', '=', True), ('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sistem_akademik.group_akademik_officer'))]"/>
        </record>
    </data>
</odoo>
