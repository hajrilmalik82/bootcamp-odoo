<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_akademik_tesis_kanban" model="ir.ui.view">
        <field name="name">akademik.tesis.kanban</field>
        <field name="model">akademik.tesis</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage" on_create="quick_create" quick_create_view="akademik_tesis.view_akademik_tesis_kanban_quick_create">
                <progressbar field="progress_category" colors='{"high": "success", "medium": "warning", "low": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="title"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <field name="student_id" widget="res_partner_many2one" options="{'no_open': True}" domain="[('identitas_mahasiswa', '=', True), ('krs_ids.line_ids.subject_id.name', 'ilike', 'Tesis')]"/>
                                </div>
                                <div t-if="record.supervisor_id.value">
                                    <span>Supervisor: </span>
                                        <field name="supervisor_id"/>
                                </div>
                            </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="progress" widget="progressbar"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                    <field name="student_id" widget="many2one_avatar_user"/>                            
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_akademik_tesis_kanban_quick_create" model="ir.ui.view">
        <field name="name">akademik.tesis.kanban.quick.create</field>
        <field name="model">akademik.tesis</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="title"/>
                    <field name="student_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_akademik_tesis_tree" model="ir.ui.view">
        <field name="name">akademik.tesis.tree</field>
        <field name="model">akademik.tesis</field>
        <field name="arch" type="xml">
            <tree string="Thesis">
                <field name="title"/>
                <field name="student_id"/>
                <field name="supervisor_id"/>
                <field name="stage" widget="badge"/>
                <field name="progress" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <record id="view_akademik_tesis_form" model="ir.ui.view">
        <field name="name">akademik.tesis.form</field>
        <field name="model">akademik.tesis</field>
        <field name="arch" type="xml">
            <form string="Thesis">
                <header>
                    <button name="action_request_approval" string="Request Approval" type="object" class="oe_highlight" invisible="stage != 'title_submission'" groups="akademik_dosen.group_akademik_officer"/>
                    <button name="action_approve_supervisor" string="Approve" type="object" class="oe_highlight" invisible="stage != 'supervisor_appointment'" groups="akademik_dosen.group_akademik_dosen"/>
                    <button name="action_reject_supervisor" string="Reject" type="object" invisible="stage != 'supervisor_appointment'" groups="akademik_dosen.group_akademik_dosen"/>
                    <button name="action_approve_proposal" string="Approve Proposal" type="object" class="oe_highlight" invisible="stage != 'proposal_seminar'" groups="akademik_dosen.group_akademik_dosen"/>
                    <button name="action_approve_research" string="Approve Research" type="object" class="oe_highlight" invisible="stage != 'research'" groups="akademik_dosen.group_akademik_dosen"/>
                    <button name="action_approve_defense" string="Approve Defense" type="object" class="oe_highlight" invisible="stage != 'final_defense' or supervisor_id.user_id != uid" groups="akademik_dosen.group_akademik_dosen"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="stage != 'supervisor_appointment'" groups="akademik_dosen.group_akademik_officer"/>
                    <field name="stage" widget="statusbar" readonly="1" options="{'clickable': '0'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="title" placeholder="Thesis Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="submission_date"/>
                            <field name="progress"/>
                            <field name="seminar_schedule" invisible="stage != 'proposal_seminar'"/>
                            <field name="defense_schedule" invisible="stage != 'final_defense'"/>
                        </group>
                        <group>
                            <field name="supervisor_id"/>
                            <field name="note"/>
                            <field name="final_score" invisible="stage not in ('final_defense', 'graduation')"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documents" >
                            <field name="document_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="file" filename="file_name"/>
                                    <field name="file_name" column_invisible="1"/>
                                    <field name="type"/>
                                    <field name="status" widget="badge"/>
                                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" invisible="status != 'draft'" groups="akademik_dosen.group_akademik_officer"/>
                                    <button name="action_verify" string="Verify" type="object" class="oe_highlight" invisible="status != 'to_be_verified'" groups="akademik_dosen.group_akademik_dosen"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Scoring" invisible="stage != 'final_defense'">
                            <field name="examiner_score_ids">
                                <tree editable="bottom">
                                    <field name="examiner_id" options="{'no_create': True}" groups="akademik_dosen.group_akademik_officer"/>
                                    <field name="examiner_id" options="{'no_create': True}" groups="akademik_dosen.group_akademik_dosen" readonly="1"/>
                                    <field name="score" sum="Total Score"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview" options="{'types':['image', 'pdf'], 'order':'desc'}"/>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_akademik_tesis_graph" model="ir.ui.view">
        <field name="name">akademik.tesis.graph</field>
        <field name="model">akademik.tesis</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="stage"/>
            </graph>
        </field>
    </record>

    <record id="action_akademik_tesis" model="ir.actions.act_window">
        <field name="name">Thesis</field>
        <field name="res_model">akademik.tesis</field>
        <field name="view_mode">kanban,tree,form,graph</field>
    </record>
</odoo>
