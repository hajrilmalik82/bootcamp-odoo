<odoo>

  <!-- Tree View -->
  <record id="quota_allocation_tree" model="ir.ui.view">
    <field name="name">quota.allocation.tree</field>
    <field name="model">quota.allocation</field>
    <field name="arch" type="xml">
      <tree>
        <field name="quota_category_id"/>
        <field name="year"/>
      </tree>
    </field>
  </record>

  <!-- Form View -->
  <record id="quota_allocation_form" model="ir.ui.view">
    <field name="name">quota.allocation.form</field>
    <field name="model">quota.allocation</field>
    <field name="arch" type="xml">
      <form string="Quota Allocation">
        <sheet>
          <group>
            <field name="quota_category_id"/>
            <field name="year"/>
          </group>

          <notebook>
            <page string="Monthly Quotas">
              <field name="line_ids">
                <tree editable="bottom">
                  <field name="month"/>
                  <field name="quantity"/>
                </tree>
              </field>
            </page>
          </notebook>

        </sheet>
      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_quota_allocation" model="ir.actions.act_window">
    <field name="name">Quota Allocation</field>
    <field name="res_model">quota.allocation</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
