<odoo>

  <record id="view_customer_quota_report_tree" model="ir.ui.view">
    <field name="name">customer.quota.report.tree</field>
    <field name="model">customer.quota.report</field>
    <field name="arch" type="xml">
      <tree string="Customer Quota Usage" create="false" edit="false" delete="false"
            decoration-danger="remaining_qty &lt; 0">
        
        <field name="partner_id"/>
        <field name="quota_category_id"/> <field name="year"/>
        <field name="month"/>
        
        <field name="limit_qty" string="Limit"/>
        <field name="used_qty" string="Used"/>
        <field name="remaining_qty" string="Remaining"/>
      </tree>
    </field>
  </record>

  <record id="view_customer_quota_report_search" model="ir.ui.view">
    <field name="name">customer.quota.report.search</field>
    <field name="model">customer.quota.report</field>
    <field name="arch" type="xml">
      <search string="Search Usage">
        <field name="partner_id"/>
        <field name="quota_category_id"/>
        <field name="year"/>
        <filter string="Over Quota" name="over_quota" domain="[('remaining_qty', '&lt;', 0)]"/>
      </search>
    </field>
  </record>

  <record id="action_customer_quota_report" model="ir.actions.act_window">
    <field name="name">Customer Quota Usage</field>
    <field name="res_model">customer.quota.report</field>
    <field name="view_mode">tree</field>
    
    <field name="context">{}</field>
    
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No customer usage data found.
      </p>
    </field>
  </record>

</odoo>