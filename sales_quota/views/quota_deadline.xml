<odoo>
  <data noupdate="1">
    <record id="default_quota_deadline_config" model="quota.deadline">
      <field name="name">Monthly Config</field>
      <field name="deadline_day">25</field>
    </record>
  </data>

  <record id="action_quota_deadline" model="ir.actions.act_window">
    <field name="name">Quota Deadline</field>
    <field name="res_model">quota.deadline</field>
    <field name="view_mode">form</field>
    <field name="res_id" ref="default_quota_deadline_config"/>
    <field name="target">current</field>
  </record>

  <record id="view_quota_deadline_form" model="ir.ui.view">
    <field name="name">quota.deadline.form</field>
    <field name="model">quota.deadline</field>
    <field name="arch" type="xml">
      <form string="Configuration" create="false" delete="false">
        <sheet>
          <div class="oe_title">
            <h1>Quota Configuration</h1>
          </div>
          <group>
            <group>
              <field name="name" invisible="1"/>
              <field name="deadline_day"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>