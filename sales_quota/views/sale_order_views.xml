<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_quota_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.quota.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
                <field name="quota_remaining_info" force_save="1" decoration-danger="quota_remaining_info &lt; 0"/>
            </xpath>
        </field>
    </record>
</odoo>
